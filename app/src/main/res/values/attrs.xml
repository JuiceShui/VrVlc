<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SouthPointer">
        <!--表盘的边距-->
        <attr name="sp_padding" format="dimension" />
        <!--表盘文字大小-->
        <attr name="sp_text_size" format="dimension" />
        <!--分针的宽度-->
        <attr name="sp_minute_pointer_width" format="dimension" />
        <!--秒针的宽度-->
        <attr name="sp_second_pointer_width" format="dimension" />
        <!--指针圆角值-->
        <attr name="sp_pointer_corner_radius" format="dimension" />
        <!--指针超过中心点的长度-->
        <attr name="sp_pointer_end_length" format="dimension" />
        <!--时刻刻度颜色-->
        <attr name="sp_scale_long_color" format="color" />
        <!--非时刻刻度颜色-->
        <attr name="sp_scale_short_color" format="color" />
        <!--分针颜色-->
        <attr name="sp_minute_pointer_color" format="color" />
        <!--秒针颜色-->
        <attr name="sp_second_pointer_color" format="color" />
    </declare-styleable>
    <declare-styleable name="HorizontalPointer">
        <!--表盘的边距-->
        <attr name="hp_padding" format="dimension" />
        <!--表盘文字大小-->
        <attr name="hp_text_size" format="dimension" />
        <!--时针的宽度-->
        <attr name="hp_hour_pointer_width" format="dimension" />
        <!--时刻刻度颜色-->
        <attr name="hp_scale_long_color" format="color" />
        <!--非时刻刻度颜色-->
        <attr name="hp_scale_short_color" format="color" />
    </declare-styleable>

    <declare-styleable name="VerticalPointer">
        <!--表盘的边距-->
        <attr name="vp_padding" format="dimension" />
        <!--表盘文字大小-->
        <attr name="vp_text_size" format="dimension" />
        <!--时针的宽度-->
        <attr name="vp_hour_pointer_width" format="dimension" />
        <!--时刻刻度颜色-->
        <attr name="vp_scale_long_color" format="color" />
        <!--非时刻刻度颜色-->
        <attr name="vp_scale_short_color" format="color" />
    </declare-styleable>
</resources>